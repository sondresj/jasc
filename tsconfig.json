{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "outDir": "./lib",
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": false,
        "noImplicitAny": false,
        "downlevelIteration": true,
        "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.js"]
}